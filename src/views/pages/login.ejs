<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header.ejs') %>

<body>

<div class="main content">
    <div class="login">
        <div class="login-message">
            <h2> <%=message || ''%></h2>
        </div>

        <form action="/auth/login" method="post">
            <label>
                <input type="text" id="username" name="username" autocomplete="true" placeholder="Username" required>
            </label>
            <label>
                <input type="password" id="password" name="password" autocomplete="true" placeholder="Password" required>
            </label>
            <input type="submit" value="Signup" onsubmit="preventDefault()">
        </form>
    </div>
</div>
</body>
</html>