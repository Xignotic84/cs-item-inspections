<body>

<div class="main content">

    <div class="signup-container">
        <div class="login">
            <h1>Reset password</h1>


            <% if (user) { %>
            <label for="password">
                <input type="password" id="password" name="password" setting="oldpassword" placeholder="Current password">
            </label>
            <% } %>

            <label for="password">
                <input type="password" id="password" name="password" setting="password1" placeholder="New password">
            </label>

            <label for="password">
                <input type="password" id="password" name="password" setting="password2" placeholder="Repeat new password">
            </label>

