<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header.ejs') %>

<body>

<div class="main content">
    <div class="login">
        <div class="login-message">
            <h2> <%=message || ''%></h2>
        </div>

        <form action="/auth/signup" method="post">
            <label>
                <input type="email" id="email" name="email" autocomplete="true" placeholder="Email" required>
            </label>
            <label>
                <input type="text" id="username" name="username" autocomplete="true" placeholder="Username" required maxlength="24" minlength="3">
            </label>
            <label>
                Are you a teacher?
                <input type="checkbox" id="is_teacher" name="is_teacher" autocomplete="false">
            </label>
            <label>
                <input type="password" id="password" name="password" autocomplete="false" placeholder="Password" required minlength="4" maxlength="60">
            </label>
            <input type="submit" value="Submit" onsubmit="preventDefault()">
        </form>
    </div>
</div>
</body>
</html>