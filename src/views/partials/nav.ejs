<nav class="navbar">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="/" class="nav-link" id="item">
                <img alt src="https://img.icons8.com/cotton/2x/home--v2.png"/>
                <span class="link-text">Home</span>
            </a>
        </li>
        <%
        if (user.permissionLevel === 3) {%>
            <li class="nav-item">
                <a href="/admin" class="nav-link" id="item">
                    <img alt src="https://img.icons8.com/color/2x/security-configuration.png"/>
                    <span class="link-text">Admin</span>
                </a>
            </li>
        <% } %>
        <li class="nav-item" id="nav-profile">
            <% if (user) { %>
                <div onclick="toggleAccountPrompt()" class="nav-link" id="item">
                    <img alt src="https://img.icons8.com/color/2x/test-account.png">
                   <span class="link-text"><%= user.username %></span>
                </div>
            <% } else { %>
                <a href="/auth/login" class="nav-link" id="item">
                    <img alt src="https://img.icons8.com/dusk/50/000000/settings.png"/>
                    <span class="link-text">Login</span>
                </a>
            <% } %>
        </li>
    </ul>
</nav>

<div class="prompt account" id="account-prompt">
    <div class="content">
        <a class="button" exclude="true" href="/auth/reset">
            Reset password
        </a>
        <a class="button" id="delete" exclude="true" href="/auth/logout">
            Logout
        </a>
    </div>
</div>

<script>
    function toggleAccountPrompt() {
      const elem = document.getElementById('account-prompt')
      if (!elem) return
      if (elem.style.display === 'block') {
        elem.style.display = 'none'
      } else {
        elem.style.display = 'block'
      }
    }

</script>
